@{
    ViewBag.Title = "Track time";
}

<div ng-controller="DashboardCtrl">
    <div class="gridCol-08 box corners posLeft">
        <div class="contentband"><a ng-click="previousDate()">&lt;</a> {{selectedDate | date:'EEEE dd-MM-yyyy' }} <a ng-click="nextDate()">&gt;</a></div>
        <div class="container">

            <h2>Registrations</h2>
            <br />
            <ul class="listOutline" id="registrationList">
                <li class="header">
                    <span class="listCell date">Date</span>
                    <span class="listCell project">Project</span>
                    <span class="listCell task">Task</span>
                    <span class="listCell comment">Comment</span>
                    <span class="listCell hours">Hours</span>
                    <span class="listCell action">&nbsp;</span>
                    <div class="clearfix"></div>
                </li>
                <li ng-repeat="item in registrations">
                    <a>
                        <span class="listCell date" title="{{item.Date | date:'dd-MM-yyyy'}}">{{item.Date | date:'dd-MM-yyyy'}}</span>
                        <span class="listCell project" title="{{item.ProjectName}}">{{item.ProjectName}}&nbsp;</span>
                        <span class="listCell task" title="{{item.TaskName}}">{{item.TaskName}}&nbsp;</span>
                        <span class="listCell comment" title="{{item.Comment}}">{{item.Comment}}&nbsp;</span>
                        <span class="listCell hours">{{item.Hours | number:2}}</span>
                        <span class="listCell action"><span ng-show="item.TaskName.length > 0" data-id="{{item.Id}}" ng-click="selectRegistrationClick($event)">Delete</span>&nbsp;</span>
                        <div class="clearfix"></div>
                    </a>
                </li>
                <li class="total">
                    <span class="listCell date">&nbsp;</span>
                    <span class="listCell project">Total</span>
                    <span class="listCell task">&nbsp;</span>
                    <span class="listCell comment">&nbsp;</span>
                    <span class="listCell hours">{{registrationsTotal | number:2}}</span>
                    <span class="listCell action">&nbsp;</span>
                    <div class="clearfix"></div>
                </li>
            </ul>
        </div>
    </div>

    <div class="gridCol-08 box corners posRight">
        <div class="contentband">
            Search: <input type="text" id="query" ng-change="filterChange()" ng-model="query" />
        </div>
        <div class="container">

            <h2>Tasks</h2>
            <div class="contentband" id="registrationBand">
                <div>
                    <label class="overflow gridCol-05" title="{{selectedTask}}">{{selectedTask}}</label>
                </div>
                <div>
                    <label class="overflow gridCol-02 posLeft">Hours:</label>
                    <input class="posLeft" type="text" ng-model="registrationHours" pattern="[0-9]" id="registrationHours" />
                    <div class="clearfix"></div>
                </div>
                <div>
                    <label class="overflow gridCol-02 posLeft">Comment:</label>
                    <input class="posLeft" type="text" ng-model="registrationText" id="registrationText" class="gridCol-02" />
                    <div class="clearfix"></div>
                </div>
                <div>
                    <label class="overflow gridCol-02 posLeft">&nbsp;</label>
                    <button class="posLeft gridCol-02" id="buttonSave" ng-click="insertRegistration()">Save</button>
                    <div class="clearfix"></div>
                </div>
            </div>
            <ul class="listOutline" id="taskList">
                <li class="header">
                    <span class="listCell project">Project</span>
                    <span class="listCell task">Task</span>
                    <span class="listCell action">&nbsp;</span>
                    <div class="clearfix"></div>
                </li>
                <li ng-repeat="item in filteredTasks = (tasks | filter:query | limitTo: 15)">
                    <a ng-click="selectTaskClick($event)">
                        <span class="listCell project" title="{{item.ProjectName}}">{{item.ProjectName}}</span>
                        <span class="listCell task" title="{{item.Name}}">{{item.Name}}</span>
                        <span class="listCell action">Add</span>
                        <div class="clearfix"></div>
                    </a>
                </li>                
            </ul>
        </div>
    </div>
</div>